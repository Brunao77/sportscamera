---
import Layout from '../layouts/Layout.astro';
import Input from '../components/Input.astro'
---

<Layout title="SportsCamera!">
    <section class="bg-white rounded-xl px-5 py-10 md:px-20 flex flex-col items-center justify-center">
        <a class="w-7 h-7 absolute top-[9%] left-10 cursor-pointer" href="/">
            <svg width="40" height="40" viewBox="0 0 24 24" stroke-width="1.5" stroke="#969696" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 12l14 0" /><path d="M5 12l6 6" /><path d="M5 12l6 -6" />
            </svg>
        </a>
            <strong class="text-5xl text-primary font-medium">Contactanos</strong>
            <form class="flex flex-col items-center gap-5 mt-5">
                <div class="flex justify-between gap-10 w-full">
                    <Input placeholder="Nombre" type="text">
                        <svg class="absolute top-1/2 left-2 translate-x-0 translate-y-[-50%] pointer-events-none" width="25" height="25" viewBox="0 0 24 24" stroke-width="1.5" stroke="#969696" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 17c3.333 -3.333 5 -6 5 -8c0 -3 -1 -3 -2 -3s-2.032 1.085 -2 3c.034 2.048 1.658 4.877 2.5 6c1.5 2 2.5 2.5 3.5 1l2 -3c.333 2.667 1.333 4 3 4c.53 0 2.639 -2 3 -2c.517 0 1.517 .667 3 2" />
                        </svg>
                    </Input>
                    <Input placeholder="Email" type="email">
                        <svg class="absolute top-1/2 left-2 translate-x-0 translate-y-[-50%] pointer-events-none" width="25" height="25" viewBox="0 0 24 24" stroke-width="1.5" stroke="#969696" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" /><path d="M3 7l9 6l9 -6" />
                        </svg>
                    </Input>
                </div>
                <textarea placeholder="Escribe el mensaje" class="bg-white border-2 outline-0 border-primary text-terciary w-full h-60 resize-none rounded-xl p-3 placeholder-terciary"></textarea>
                <button class="w-1/2 cursor-pointer rounded-2xl bg-primary border text-white text-l text-regular p-3 px-5">ENVIAR</button>
            </form>
    </section>
</Layout>