---
import Layout from '../../layouts/Layout.astro'
import Input from '../../components/Input.astro'
import Button from '../../components/Button.astro';
import Email from '../../icons/Email.astro';
import { ViewTransitions } from "astro:transitions";
import { UserModel } from '../../models/user.js';
import { createPasswordResetToken, sendPasswordResetToken } from "../../utils";

const user = Astro.locals.user;
if (user) {
	return Astro.redirect("/video-list");
}
let error = ""
let message = ""
if(Astro.request.method === 'POST'){
    try {
        const data = await Astro.request.formData();
        const email = data.get("email");

        const { user_id } = await UserModel.findWithEmail({ email })

        if (!user_id)
            return error = "Email invalido"

        const verificationToken = await createPasswordResetToken(user_id);
        const verificationLink = import.meta.env.URL "/reset-password/" + verificationToken;

        const statusEmailSent = await sendPasswordResetToken(email, verificationLink);

        if(statusEmailSent === 500) return error = "Error sending email"

        return message = 'Check your email for instructions on resetting your password'
    } catch (error) {
        console.error(error.message);
    }
}
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>SportsCamera!</title>
		<ViewTransitions />
	</head>
	<body class="overflow-hidden relative">
		<div class="w-screen h-screen md:flex md:items-center md:justify-center">
			<main class=`z-10 h-full md:h-2/5 md:w-1/3 flex md:flex-row flex-col-reverse md:rounded-xl`>
				<form method="POST" class="bg-white flex flex-col items-center justify-between p-2 rounded-xl w-full" id="sendEmail">
                    <div class="flex flex-col items-center gap-4 text-center">
                        <strong class="text-2xl text-primary">Recupera tu cuenta de SportsCamera</strong>
                        <p>Introduce el correo electrónico asociado a tu cuenta para cambiar tu contraseña.</p>
                        <Input name="email" placeholder="Email" type="email" required>
                            <Email />
                        </Input>
                    </div>
                    {error && <span class="text-center text-red-500 text-sm hidden">{error}</span>}
                    {message && <span class="text-center text-red-500 text-sm hidden">{message}</span>}
                    <Button type="submit">SIGUIENTE</Button>
                </form>
			</main>
		</div>
        <script is:inline>
            document.addEventListener('astro:page-load', () => {
                const form = document.getElementById('sendEmail')
                form.addEventListener('submit', async function(event){
                    event.preventDefault();
        
                    const loginBtn = document.getElementById('change_password_btn')
                    const buttonContent = document.getElementById('content_btn');
                    const spinner = document.getElementById('spinner');
                    
                    loginBtn.disabled = true
        
                    buttonContent.classList.add('hidden');
                    spinner.classList.remove('hidden');
                    
                    const inputs = form.querySelectorAll('input');
                    inputs.forEach(function(input) {
                        input.disabled = true;
                    });			
                })
            }, { once: true })
        </script>
	</body>
</html>
